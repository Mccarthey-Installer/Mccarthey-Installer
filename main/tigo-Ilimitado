#!/bin/bash
echo "âœ… Script TIGO Ilimitado - McCarthey VPN (SSL + BadVPN) ejecutÃ¡ndose..."
set -e
export TZ="America/El_Salvador"

# ===============================
# 0. DEPENDENCIAS Y LOCALES
# ===============================

echo "ðŸ› ï¸ Actualizando sistema e instalando dependencias..."
sudo apt update -y
sudo apt upgrade -y
sudo apt install -y util-linux git cmake build-essential curl unzip wget \
python3 python3-dev python-is-python3 screen net-tools python3-pip locales cpulimit stunnel4 bc

sudo sed -i '/es_SV.UTF-8/s/^# //g' /etc/locale.gen
sudo locale-gen es_SV.UTF-8
sudo update-locale LANG=es_SV.UTF-8
sudo timedatectl set-timezone America/El_Salvador

# ===============================
# 1. PROXY PYTHON EN 127.0.0.1:80
# ===============================

echo "ðŸŒ€ Configurando proxy Python..."
pkill -f "PDirect.py 80" || true
fuser -k 80/tcp || true
sleep 2

mkdir -p /etc/ADMcgh

cat > /etc/ADMcgh/PDirect.py << 'EOF'
#!/usr/bin/env python3
import asyncio, sys

LISTENING_ADDR = '0.0.0.0'
LISTENING_PORT = int(sys.argv[1]) if len(sys.argv) > 1 else 80
PASS = ''
BUFLEN = 4096 * 4
TIMEOUT = 60
DEFAULT_HOST = '127.0.0.1:22'
STATUS_RESP = '101'
FTAG = '\r\nContent-length: 0\r\n\r\nHTTP/1.1 200 Connection Established\r\n\r\n'
STATUS_TXT = '<strong style="color: #ff0000;">Kang Sae-byeok</strong>'
RESPONSE = f"HTTP/1.1 {STATUS_RESP} {STATUS_TXT} {FTAG}"
MAX_CONNECTIONS = 50
semaphore = asyncio.Semaphore(MAX_CONNECTIONS)

def find_header(header, data):
    try:
        s = data.decode(errors='ignore')
        start = s.find(header + ": ")
        if start == -1: return ""
        start += len(header) + 2
        end = s.find("\r\n", start)
        return s[start:end] if end != -1 else s[start:]
    except: return ""

async def connect_target(host_port):
    try:
        host = host_port.split(':')[0] if ':' in host_port else host_port
        port = int(host_port.split(':')[1]) if ':' in host_port else 22
        return await asyncio.open_connection(host, port)
    except: return None, None

async def handle_client(reader, writer):
    async with semaphore:
        try:
            data = await asyncio.wait_for(reader.read(BUFLEN), timeout=TIMEOUT)
            if not data: return
            host_port = find_header('X-Real-Host', data) or DEFAULT_HOST
            passwd = find_header('X-Pass', data)
            if PASS and passwd != PASS:
                writer.write(b'HTTP/1.1 400 WrongPass!\r\n\r\n')
                await writer.drain()
                return
            if host_port.startswith(('127.0.0.1', 'localhost')) or not PASS:
                target_reader, target_writer = await connect_target(host_port)
                if not target_reader: return
                writer.write(RESPONSE.encode())
                await writer.drain()
                await asyncio.gather(
                    proxy_data(reader, target_writer),
                    proxy_data(target_reader, writer)
                )
        except: pass
        finally:
            writer.close()
            await writer.wait_closed()

async def proxy_data(reader, writer):
    try:
        while True:
            data = await reader.read(BUFLEN)
            if not data: break
            writer.write(data)
            await writer.drain()
    except: pass
    finally:
        try: writer.close(); await writer.wait_closed()
        except: pass

async def main():
    server = await asyncio.start_server(handle_client, LISTENING_ADDR, LISTENING_PORT)
    addrs = ', '.join(str(s.getsockname()) for s in server.sockets)
    print("ðŸŒ PROXY HTTP MCCARTHEY")
    print(f"Listening on: {addrs}")
    async with server: await server.serve_forever()

if __name__ == '__main__':
    try: asyncio.run(main())
    except KeyboardInterrupt: print("Parando...")
EOF

chmod +x /etc/ADMcgh/PDirect.py

# ===============================
# 2. STUNNEL4: 443 â†’ 80 (SSL)
# ===============================

echo "ðŸ” Configurando Stunnel4 (443 â†’ 80)..."
mkdir -p /etc/stunnel/certs /var/run/stunnel4 /var/log
touch /var/log/stunnel4.log
chown root:root /var/run/stunnel4 /var/log/stunnel4.log
chmod 755 /var/run/stunnel4
chmod 644 /var/log/stunnel4.log

if [ ! -f /etc/stunnel/certs/stunnel.pem ]; then
    openssl req -x509 -nodes -days 1095 -newkey rsa:2048 \
        -keyout /etc/stunnel/certs/stunnel.key \
        -out /etc/stunnel/certs/stunnel.crt \
        -subj "/C=SV/ST=San Salvador/L=Santa Ana/O=McCartheyVPN/OU=McCPanel/CN=SSLService/emailAddress=admin@mccarthey.net" >/dev/null 2>&1
    cat /etc/stunnel/certs/stunnel.key /etc/stunnel/certs/stunnel.crt > /etc/stunnel/certs/stunnel.pem
    chmod 600 /etc/stunnel/certs/stunnel.pem
    echo "âœ… Certificado SSL generado: SSLService"
else
    echo "âœ… Certificado SSL ya existe"
fi

cat > /etc/stunnel/stunnel.conf <<EOF
cert = /etc/stunnel/certs/stunnel.pem
pid = /var/run/stunnel4/stunnel4.pid
setuid = root
setgid = root
debug = 3
output = /var/log/stunnel4.log
client = no
foreground = no
socket = l:TCP_NODELAY=1
socket = r:TCP_NODELAY=1

[python-https]
accept = 0.0.0.0:443
connect = 127.0.0.1:80
TIMEOUTclose = 0
EOF

systemctl daemon-reload
systemctl enable stunnel4 2>/dev/null || true
systemctl restart stunnel4 || true

# Iniciar proxy Python
pkill -f "PDirect.py 80" || true
sleep 2
nohup python3 /etc/ADMcgh/PDirect.py 80 > /root/nohup.out 2>&1 &

# ===============================
# 3. BADVPN: 7200 y 7300
# ===============================

echo "ðŸ“¡ Compilando BadVPN..."
rm -rf /opt/badvpn
git clone https://github.com/ambrop72/badvpn.git /opt/badvpn
cd /opt/badvpn
mkdir -p build && cd build
cmake .. -DBUILD_NOTHING_BY_DEFAULT=1 -DBUILD_UDPGW=1
make -j$(nproc)

pkill -f badvpn-udpgw || true
cp udpgw/badvpn-udpgw /usr/bin/
chmod +x /usr/bin/badvpn-udpgw

screen -S badvpn -X quit || true
screen -S badUDP72 -X quit || true

screen -dmS badvpn /usr/bin/badvpn-udpgw --listen-addr 127.0.0.1:7300 --max-clients 1000 --max-connections-for-client 10
screen -dmS badUDP72 /usr/bin/badvpn-udpgw --listen-addr 127.0.0.1:7200 --max-clients 1000 --max-connections-for-client 10

# ===============================
# 4. AUTOINICIO (rc.local)
# ===============================

echo "ðŸ§© Configurando autoarranque..."
cat > /etc/rc.local <<'EOF'
#!/bin/bash
sleep 15
nohup python3 /etc/ADMcgh/PDirect.py 80 > /root/nohup.out 2>&1 &
systemctl start stunnel4
screen -dmS badvpn /usr/bin/badvpn-udpgw --listen-addr 127.0.0.1:7300 --max-clients 1000 --max-connections-for-client 10
screen -dmS badUDP72 /usr/bin/badvpn-udpgw --listen-addr 127.0.0.1:7200 --max-clients 1000 --max-connections-for-client 10
exit 0
EOF
chmod +x /etc/rc.local

cat > /etc/systemd/system/rc-local.service <<'EOF'
[Unit]
Description=/etc/rc.local Compatibility
ConditionPathExists=/etc/rc.local

[Service]
Type=forking
ExecStart=/etc/rc.local start
TimeoutSec=0
StandardOutput=tty
RemainAfterExit=yes

[Install]
WantedBy=multi-user.target
EOF

systemctl daemon-reload
systemctl enable rc-local
systemctl restart rc-local

# ===============================
# 5. GESTIÃ“N DE RECURSOS
# ===============================

echo "ðŸ› ï¸ Configurando gestiÃ³n de RAM y CPU..."
touch /var/log/gestionar_recursos.log
chmod 644 /var/log/gestionar_recursos.log

cat > /root/gestionar_recursos.sh << 'EOF'
#!/bin/bash
LOCK="/tmp/gestionar.lock"
LOG="/var/log/gestionar_recursos.log"
PIDFILE="/tmp/cpulimit_pids.txt"

[ -f "$LOCK" ] && exit 1
touch "$LOCK"
trap 'rm -f "$LOCK"' EXIT

cleanup() {
    [ -f "$PIDFILE" ] && while read p; do kill -9 $p 2>/dev/null; done < "$PIDFILE"
    > "$PIDFILE"
    pkill -9 -f "cpulimit -p" 2>/dev/null
}
cleanup

pgrep -f "/root/scrip.sh mon" > /dev/null || { /bin/bash /root/scrip.sh mon & echo "$(date): scrip.sh mon iniciado" >> "$LOG"; }

while :; do
    FREE=$(free -m | awk '/Mem:/{print $4}')
    CACHE=$(free -m | awk '/Mem:/{print $6}')
    [ $FREE -lt 200 ] || [ $CACHE -gt 100 ] && { sync; sudo sysctl -w vm.drop_caches=3 > /dev/null; }

    LOAD=$(awk '{print $1}' /proc/loadavg)
    if (( $(echo "$LOAD > 2.0" | bc -l) )); then
        P_DIRECT=$(pgrep -f /etc/ADMcgh/PDirect.py)
        P_BADVPN=$(pgrep -f badvpn-udpgw)
        P_SCRIP=$(pgrep -f "/root/scrip.sh mon")
        for p in $P_DIRECT; do cpulimit -p $p -l 20 & echo $! >> "$PIDFILE"; done
        for p in $P_BADVPN; do cpulimit -p $p -l 60 & echo $! >> "$PIDFILE"; done
        for p in $P_SCRIP; do cpulimit -p $p -l 10 & echo $! >> "$PIDFILE"; done
    fi
    sleep 10
done
EOF

chmod +x /root/gestionar_recursos.sh

cat > /etc/systemd/system/gestionar-recursos.service <<'EOF'
[Unit]
Description=GestiÃ³n de RAM y CPU
After=network.target rc-local.service stunnel4.service

[Service]
Type=simple
User=root
ExecStart=/bin/bash /root/gestionar_recursos.sh
Restart=always
RestartSec=5

[Install]
WantedBy=multi-user.target
EOF

systemctl daemon-reload
systemctl enable gestionar-recursos.service
systemctl restart gestionar-recursos.service

# ===============================
# 6. MENSAJE FINAL
# ===============================

echo ""
echo "=================================================="
echo "âœ… MCCARTHY VPN INSTALADO CON Ã‰XITO"
echo "ðŸ“¡ Puertos activos:"
ss -tulnp | grep -E ':443|:80|:7200|:7300' || true
echo ""
echo "ðŸ”’ SSL: 443 â†’ 80 (SNI: SSLService)"
echo "ðŸŒ Proxy: 127.0.0.1:80"
echo "ðŸ“¶ BadVPN: 7200 y 7300"
echo "ðŸ› ï¸ GestiÃ³n de recursos activa"
echo "ðŸ”„ Autoarranque configurado"
echo ""
echo "ðŸŽ¯ HTTP Injector:"
echo "   SNI: SSLService"
echo "   Puerto: 443"
echo "   Proxy: TU_IP"
echo "   MÃ©todo: CONNECT"
echo "=================================================="
echo ""

exit 0
