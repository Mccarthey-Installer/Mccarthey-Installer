echo ""
echo "======================================"
echo "âœ… INSTALACIÃ“N COMPLETA DE MCCARTHY VPN"
echo "ðŸ“¦ Puertos activos:"
ss -tulnp | grep -E ':80|:443|:7200|:7300' || true
echo ""
echo "ðŸ›¡ï¸  Proxy HTTP (127.0.0.1:80) ACTIVO via Nohup"
echo "ðŸ”’ Stunnel4 (443 â†’ 80) ACTIVO con SSL personalizado"
echo "ðŸŽ¯ Listo para usar con HTTP Injector (SNI: SSLService)"
echo "ðŸ’Ž Firma personalizada: Kang Sae-byeok"
echo "ðŸ› ï¸ GestiÃ³n de RAM y CPU activa (servicio: gestionar-recursos)"
echo "======================================"
echo ""

