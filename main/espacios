#!/bin/bash
echo "Script TIGO Ilimitado ejecutado correctamente."
set -e
export TZ="America/El_Salvador"
echo "Instalando dependencias..."

# Actualizar índices de paquetes
sudo apt update -y
sudo apt upgrade -y

# Instalar paquetes necesarios
sudo apt install -y util-linux git cmake build-essential curl unzip wget \
python3 python3-dev python-is-python3 screen net-tools python3-pip locales cpulimit bc

# Configurar locales
sudo sed -i '/es_SV.UTF-8/s/^# //g' /etc/locale.gen
sudo locale-gen
sudo update-locale LANG=es_SV.UTF-8
sudo timedatectl set-timezone America/El_Salvador

# ===========================
# 1. INSTALAR PROXY PYTHON (PUERTO 80 o 443)
# ===========================
echo "Configurando proxy Python en puerto 80..."

mkdir -p /etc/ADMcgh /logs
cat > /etc/ADMcgh/PDirect.py << 'EOF'
#!/usr/bin/env python3
# -*- coding: utf-8 -*-

import asyncio
import sys
import socket
import time

# ==========================
# CONFIGURACIÓN PRINCIPAL
# ==========================

LISTENING_ADDR = '0.0.0.0'
LISTENING_PORT = int(sys.argv[1]) if len(sys.argv) > 1 else 80
PASS = ''  # Deja vacío si no usas contraseña
BUFLEN = 4096 * 4
TIMEOUT = 60
DEFAULT_HOST = '127.0.0.1:22'
STATUS_RESP = '101'
FTAG = '\r\nContent-length: 0\r\n\r\nHTTP/1.1 200 Connection Established\r\n\r\n'
STATUS_TXT = '<strong style="color: #ff0000;">Kang Sae-byeok</strong>'
RESPONSE = f"HTTP/1.1 {STATUS_RESP} {STATUS_TXT} {FTAG}"

MAX_CONNECTIONS = 100
semaphore = asyncio.Semaphore(MAX_CONNECTIONS)

# ==========================
# FUNCIONES AUXILIARES
# ==========================

def find_header(header, data):
    try:
        data_str = data.decode(errors='ignore')
        start = data_str.find(header + ": ")
        if start == -1:
            return ""
        start += len(header) + 2
        end = data_str.find("\r\n", start)
        return data_str[start:end] if end != -1 else data_str[start:]
    except:
        return ""

async def connect_target(host_port):
    try:
        if ':' in host_port:
            host, port = host_port.split(':')
            port = int(port)
        else:
            host = host_port
            port = 22
        reader, writer = await asyncio.open_connection(host, port)
        return reader, writer
    except Exception as e:
        print(f"[ERROR] connect_target: {e}")
        return None, None

# ==========================
# KEEP-ALIVE (CRUCIAL)
# ==========================

async def keep_alive(reader, writer):
    while True:
        await asyncio.sleep(10)  # Cada 10 segundos
        try:
            if not writer.is_closing():
                writer.write(b'\x00')  # NUL byte (invisible, mantiene vivo)
                await writer.drain()
        except:
            break

# ==========================
# PROXY BIDIRECCIONAL
# ==========================

async def proxy_data(reader, writer, name=""):
    try:
        while True:
            data = await reader.read(BUFLEN)
            if not data:
                break
            writer.write(data)
            await writer.drain()
    except Exception as e:
        pass
    finally:
        try:
            writer.close()
            await writer.wait_closed()
        except:
            pass

# ==========================
# HANDLER DE CONEXIONES
# ==========================

async def handle_client(client_reader, client_writer):
    async with semaphore:
        client_addr = client_writer.get_extra_info('peername')
        log_prefix = f"[{time.strftime('%H:%M:%S')}] {client_addr}"
        print(f"{log_prefix} → Nueva conexión")

        try:
            data = await asyncio.wait_for(client_reader.read(BUFLEN), timeout=TIMEOUT)
            if not data:
                client_writer.close()
                await client_writer.wait_closed()
                return

            host_port = find_header('X-Real-Host', data) or DEFAULT_HOST
            split = find_header('X-Split', data)
            passwd = find_header('X-Pass', data)

            if split:
                await client_reader.read(BUFLEN)

            if PASS and passwd != PASS:
                client_writer.write(b'HTTP/1.1 400 WrongPass!\r\n\r\n')
                await client_writer.drain()
                client_writer.close()
                await client_writer.wait_closed()
                print(f"{log_prefix} Contraseña incorrecta")
                return
            elif host_port.startswith('127.0.0.1') or host_port.startswith('localhost') or not PASS:
                target_reader, target_writer = await connect_target(host_port)
                if not target_reader:
                    client_writer.close()
                    await client_writer.wait_closed()
                    print(f"{log_prefix} No se pudo conectar a {host_port}")
                    return

                client_writer.write(RESPONSE.encode())
                await client_writer.drain()
                print(f"{log_prefix} Túnel SSH establecido → {host_port}")

                # === PROXY + KEEP-ALIVE ===
                await asyncio.gather(
                    proxy_data(client_reader, target_writer, "CLIENT→SERVER"),
                    proxy_data(target_reader, client_writer, "SERVER→CLIENT"),
                    keep_alive(client_reader, target_writer),
                    keep_alive(target_reader, client_writer)
                )
                print(f"{log_prefix} Conexión cerrada")

        except asyncio.TimeoutError:
            print(f"{log_prefix} Timeout")
        except Exception as e:
            print(f"{log_prefix} Error: {e}")
        finally:
            try:
                client_writer.close()
                await client_writer.wait_closed()
            except:
                pass

# ==========================
# SERVIDOR MAIN
# ==========================

async def main(host=LISTENING_ADDR, port=LISTENING_PORT):
    server = await asyncio.start_server(handle_client, host, port)
    addrs = ', '.join(str(sock.getsockname()) for sock in server.sockets)
    print("="*50)
    print("PROXY HTTP MCCARTHEY - VPS TUNNEL")
    print(f"IP: {host}")
    print(f"PUERTO: {port}")
    print("Powered by MCC-KEY System")
    print(f"Escuchando en: {addrs}")
    print("Keep-Alive: ACTIVO cada 10s")
    print("="*50)

    async with server:
        await server.serve_forever()

if __name__ == '__main__':
    try:
        asyncio.run(main())
    except KeyboardInterrupt:
        print("\nServidor detenido por el usuario.")
    except Exception as e:
        print(f"Error crítico: {e}")
EOF

chmod +x /etc/ADMcgh/PDirect.py

# Iniciar con nohup en puerto 80
pkill -f PDirect.py || true
nohup python3 /etc/ADMcgh/PDirect.py 80 > /logs/proxy.log 2>&1 &

# ===========================
# 2. BADVPN PUERTOS 7200 Y 7300
# ===========================
echo "Compilando y configurando BadVPN..."
rm -rf /opt/badvpn
git clone https://github.com/ambrop72/badvpn.git /opt/badvpn
mkdir -p /opt/badvpn/build && cd /opt/badvpn/build
cmake .. -DBUILD_NOTHING_BY_DEFAULT=1 -DBUILD_UDPGW=1
make -j$(nproc)

pkill -f badvpn-udpgw || true
cp udpgw/badvpn-udpgw /usr/bin/
chmod +x /usr/bin/badvpn-udpgw

screen -S badvpn -X quit || true
screen -S badUDP72 -X quit || true

screen -dmS badvpn /usr/bin/badvpn-udpgw --listen-addr 127.0.0.1:7300 --max-clients 1000 --max-connections-for-client 10
screen -dmS badUDP72 /usr/bin/badvpn-udpgw --listen-addr 127.0.0.1:7200 --max-clients 1000 --max-connections-for-client 10

# ===========================
# 3. CONFIGURAR SSHD (KEEP-ALIVE)
# ===========================
echo "Configurando Keep-Alive en SSHD..."
if ! grep -q "ClientAliveInterval" /etc/ssh/sshd_config; then
    echo -e "\nClientAliveInterval 10\nClientAliveCountMax 3" >> /etc/ssh/sshd_config
fi
systemctl restart sshd

# ===========================
# 4. AUTOINICIO /etc/rc.local
# ===========================
echo "Configurando autoarranque vía rc.local..."

cat > /etc/rc.local <<EOF
#!/bin/bash
sleep 15
nohup python3 /etc/ADMcgh/PDirect.py 80 > /logs/proxy.log 2>&1 &
screen -dmS badvpn /usr/bin/badvpn-udpgw --listen-addr 127.0.0.1:7300 --max-clients 1000 --max-connections-for-client 10
screen -dmS badUDP72 /usr/bin/badvpn-udpgw --listen-addr 127.0.0.1:7200 --max-clients 1000 --max-connections-for-client 10
exit 0
EOF

chmod +x /etc/rc.local

cat > /etc/systemd/system/rc-local.service <<EOF
[Unit]
Description=/etc/rc.local Compatibility
ConditionPathExists=/etc/rc.local

[Service]
Type=forking
ExecStart=/etc/rc.local start
TimeoutSec=0
StandardOutput=tty
RemainAfterExit=yes
SysVStartPriority=99

[Install]
WantedBy=multi-user.target
EOF

systemctl daemon-reload
systemctl enable rc-local
systemctl start rc-local

# ===========================
# 5. GESTIÓN DE RECURSOS (MEJORADA)
# ===========================
echo "Configurando gestión de RAM y CPU..."

touch /var/log/gestionar_recursos.log
chmod 644 /var/log/gestionar_recursos.log

cat > /root/gestionar_recursos.sh << 'EOF'
#!/bin/bash

LOCK_FILE="/tmp/gestionar_recursos.lock"
LOG_FILE="/var/log/gestionar_recursos.log"
PID_FILE="/tmp/cpulimit_pids.txt"

if [ -f "$LOCK_FILE" ]; then
    echo "$(date): Ya en ejecución." >> "$LOG_FILE"
    exit 1
fi

touch "$LOCK_FILE"
trap 'rm -f "$LOCK_FILE"; exit' INT TERM EXIT

cleanup_cpulimit() {
    if [ -f "$PID_FILE" ]; then
        while read -r cpid; do
            kill -9 "$cpid" 2>/dev/null || true
        done < "$PID_FILE"
        > "$PID_FILE"
    fi
    pkill -9 -f "cpulimit -p" 2>/dev/null
}

cleanup_cpulimit

MEM_THRESHOLD=200
CACHE_THRESHOLD=100
LOAD_THRESHOLD=2.0

PREV_PIDS_PDIRECT=""
PREV_PIDS_BADVPN=""

while true; do
    FREE_MEM=$(free -m | awk '/Mem:/ {print $4}')
    CACHE_MEM=$(free -m | awk '/Mem:/ {print $6}')

    if [ "$FREE_MEM" -lt "$MEM_THRESHOLD" ] || [ "$CACHE_MEM" -gt "$CACHE_THRESHOLD" ]; then
        echo "$(date): Liberando caché..." >> "$LOG_FILE"
        sync; sudo sysctl -w vm.drop_caches=3 > /dev/null
    fi

    LOAD_AVG=$(awk '{print $1}' /proc/loadavg)
    if (( $(echo "$LOAD_AVG > $LOAD_THRESHOLD" | bc -l) )); then
        CURRENT_PIDS_PDIRECT=$(pgrep -f /etc/ADMcgh/PDirect.py)
        CURRENT_PIDS_BADVPN=$(pgrep -f badvpn-udpgw)

        if [ "$CURRENT_PIDS_PDIRECT" != "$PREV_PIDS_PDIRECT" ] || [ "$CURRENT_PIDS_BADVPN" != "$PREV_PIDS_BADVPN" ]; then
            cleanup_cpulimit

            for pid in $CURRENT_PIDS_PDIRECT; do
                cpulimit -p "$pid" -l 40 & echo $! >> "$PID_FILE"
            done
            for pid in $CURRENT_PIDS_BADVPN; do
                cpulimit -p "$pid" -l 60 & echo $! >> "$PID_FILE"
            done

            PREV_PIDS_PDIRECT="$CURRENT_PIDS_PDIRECT"
            PREV_PIDS_BADVPN="$CURRENT_PIDS_BADVPN"
        fi
    fi

    sleep 15
done
EOF

chmod +x /root/gestionar_recursos.sh

cat > /etc/systemd/system/gestionar-recursos.service <<EOF
[Unit]
Description=Gestiona RAM y CPU
After=network.target rc-local.service

[Service]
Type=simple
User=root
ExecStart=/bin/bash /root/gestionar_recursos.sh
Restart=always
RestartSec=10

[Install]
WantedBy=multi-user.target
EOF

systemctl daemon-reload
systemctl enable gestionar-recursos.service
systemctl start gestionar-recursos.service

# ===========================
# 6. MENSAJE FINAL
# ===========================
echo ""
echo "======================================"
echo "INSTALACIÓN COMPLETA DE MCCARTHY VPN"
echo "Puertos activos:"
ss -tulnp | grep -E ':80|:7200|:7300' || true
echo ""
echo "Proxy HTTP (80 -> 22) ACTIVO"
echo "Keep-Alive: 10s (SSH + Proxy)"
echo "Listo para HTTP Custom"
echo "Firma: Kang Sae-byeok"
echo "Logs: tail -f /logs/proxy.log"
echo "======================================"
echo ""

exit 0
